.cover__subtitle {
  width: 360px;
  margin: 0 auto;
  position: absolute;
  bottom: 245px;
  left: 0;
  right: 0;
  color: white;
  font-family: 'Inter';
  font-style: normal;
  font-weight: normal;
  line-height: 122%;
  font-size: 18px;
  text-align: center;
}

@media screen and (max-width: 1279px) {
  .cover__subtitle {
    bottom: 195px;
  }
}

@media screen and (max-width: 1023px) {
  .cover__subtitle {
    bottom: 115px;
  }
}

@media screen and (max-width: 767px) {
  .cover__subtitle {
    width: 280px;
    bottom: 33px;
    line-height: 114%;
    font-size: 14px;
  }
}