.lead__title {
  width: 720px;
  margin: 0 auto 32px;
  color: white;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 900;
  line-height: 100px;
  font-size: 96px;
  text-align: center;
}

@media screen and (max-width: 767px) {
  .lead__title {
    width: 288px;
    line-height: 44px;
    font-size: 40px;
    margin-bottom: 16px;
  }
}