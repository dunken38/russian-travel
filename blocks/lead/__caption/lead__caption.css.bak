.lead__caption {
  margin: 8px 0 0;
  color: white;
  font-family: 'Inter-Light';
  line-height: 140%;
  font-size: 10px;
  font-style: normal;
  letter-spacing: 1.5px;
  text-transform: uppercase;
}

@media screen and (max-width: 1023px) {
  .lead__caption {
    margin-left: 24px;
  }
}

@media screen and (max-width: 767px) {
  .lead__caption {
    margin-left: 16px;
  }
}